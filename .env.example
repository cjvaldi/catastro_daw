# ============================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ============================================
APP_NAME="CatastroApp"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost:8000

# ============================================
# BASE DE DATOS
# ============================================
# Configuración para MySQL
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=catastro_daw
DB_USERNAME=root
DB_PASSWORD=

# ============================================
# CACHÉ Y SESIONES
# ============================================
CACHE_STORE=database
QUEUE_CONNECTION=database
SESSION_DRIVER=database
SESSION_LIFETIME=120

# ============================================
# LOGS
# ============================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=debug

# ============================================
# CORREO (OPCIONAL - Para recuperación de contraseña)
# ============================================
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@catastro.test"
MAIL_FROM_NAME="${APP_NAME}"

# ============================================
# CONFIGURACIÓN ADICIONAL
# ============================================
BCRYPT_ROUNDS=12
VITE_APP_NAME="${APP_NAME}"
